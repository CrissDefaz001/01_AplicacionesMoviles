<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="291dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_usuarioGitHub" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.073"
            android:hint="@string/lblUsuario" android:autofillHints="@string/lblUsuario"/>
    <Button
            android:layout_width="292dp"
            android:layout_height="52dp"
            android:id="@+id/btn_obtenerRepos" app:layout_constraintStart_toStartOf="@+id/et_usuarioGitHub"
            app:layout_constraintEnd_toEndOf="@+id/et_usuarioGitHub" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_usuarioGitHub" android:text="@string/lblObtener"/>
    <ListView
            android:layout_width="362dp"
            android:layout_height="514dp"
            app:layout_constraintStart_toStartOf="@+id/btn_obtenerRepos" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_obtenerRepos"
            app:layout_constraintEnd_toEndOf="@+id/btn_obtenerRepos" app:layout_constraintHorizontal_bias="0.514"
            android:id="@+id/lv_listaRepos"/>
</android.support.constraint.ConstraintLayout>